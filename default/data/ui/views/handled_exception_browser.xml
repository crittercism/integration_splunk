<form script="link_switcher.js, autodiscover.js">
  <label>Handled Exception Browser</label>
  <description>See handled exception detail.</description>
  <fieldset autoRun="true" submitButton="false">
    <input type="dropdown" token="appName" searchWhenChanged="true">
      <label>Select an Application:</label>
      <prefix>"</prefix>
      <suffix>"</suffix>
      <populatingSearch fieldForValue="appId" fieldForLabel="appName" earliest="-24h" latest="now">
        <![CDATA[index=crittercism sourcetype=crittercism | stats dc by appName, appId]]>
      </populatingSearch>
      <selectFirstChoice>true</selectFirstChoice>
    </input>
  </fieldset>
  <row>
    <panel>
      <chart id="link4">
        <title>Application Exceptions (Daily) Over Time</title>
        <searchString>index=crittercism index=crittercism sourcetype="crittercism"  "MessageType=ExceptionCounts"  $appName$  | head 1| rex "\((?&lt;xdate&gt;\d{4}\-\d{2}\-\d{2}?)\,(?&lt;val&gt;\d+)" max_match=32 | eval fields=mvzip(xdate,val)  | mvexpand fields | rex field=fields "(?&lt;ExceptionX&gt;\d{4}\-\d{2}\-\d{2}?),(?&lt;EXCEPTIONS&gt;\d+)" | rex field=ExceptionX "(?&lt;ExceptionYear&gt;\d{4})\-(?&lt;ExceptionMon&gt;\d{2})\-(?&lt;ExceptionDay&gt;\d{2})" | eval ExceptionDate = ExceptionMon."-".ExceptionDay | chart values(EXCEPTIONS) as ExceptionCount by  ExceptionDate</searchString>
        <earliestTime>$earliest$</earliestTime>
        <latestTime>$latest$</latestTime>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.chart">line</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <chart id="link5">
        <title>Exceptions Per Hour Split by Exception</title>
        <searchString>index=crittercism sourcetype="crittercism"  MessageType=ExceptionSummary $appName$ | reverse |stats first(sessionCount) as p_count by hash,_time | delta p_count as pdelta | eval pdelta=if(pdelta&lt;0,0,pdelta) | timechart values(pdelta) by hash</searchString>
        <earliestTime>-24h@h</earliestTime>
        <latestTime>now</latestTime>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">false</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">line</option>
        <option name="charting.chart.nullValueMode">connect</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
        <option name="charting.axisTitleX.text">Time</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Exception Summary</title>
        <searchString>index=crittercism sourcetype="crittercism" MessageType=ExceptionSummary $appName$ | dedup reason, name | table reason, status, name, last_occurred_time, num_unique_sessions, num_sessions, hash, suspect_line</searchString>
        <earliestTime>-7d@h</earliestTime>
        <latestTime>now</latestTime>
        <option name="wrap">true</option>
        <option name="rowNumbers">true</option>
        <option name="drilldown">row</option>
        <option name="dataOverlayMode">none</option>
        <option name="count">10</option>
        <drilldown target="exceptiondetails">
          <!-- Access the input on the target form, which is in the same app  -->
          <!-- todo: fix this    -->
          <link>crashdetails?form.hash=$row.hash$</link>
        </drilldown>
      </table>
    </panel>
  </row>
</form>